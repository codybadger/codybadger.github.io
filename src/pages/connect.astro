  <style>
    .connect-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .connect-item {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      border: 2px solid #f1f3f4;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .connect-item:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      border-color: #3498db;
    }

    .connect-item.highlight {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-color: transparent;
    }

    .connect-item.highlight .connect-link {
      color: white;
    }

    .connect-item.highlight .description {
      color: rgba(255,255,255,0.8);
    }

    .connect-content {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
    }

    .icon-section {
      flex-shrink: 0;
    }

    .connect-icon {
      width: 48px;
      height: 48px;
      color: #3498db;
      transition: transform 0.2s ease;
    }

    .connect-item.highlight .connect-icon {
      color: white;
    }

    .connect-item:hover .connect-icon {
      transform: scale(1.1);
    }

    .text-section {
      flex: 1;
    }

    .text-section h3 {
      margin: 0 0 0.5rem 0;
      color: #2c3e50;
      font-size: 1.25rem;
      font-weight: 600;
    }

    .connect-item.highlight h3 {
      color: white;
    }

    .connect-link {
      display: inline-block;
      color: #3498db;
      text-decoration: none;
      font-weight: 500;
      margin-bottom: 0.5rem;
      transition: all 0.2s ease;
      font-size: 0.95rem;
    }

    .connect-link:hover {
      color: #2980b9;
      text-decoration: underline;
    }

    .description {
      color: #6c757d;
      font-size: 0.9rem;
      margin: 0;
      line-height: 1.4;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .connect-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .connect-item {
        padding: 1.25rem;
      }

      .connect-content {
        gap: 0.75rem;
      }

      .connect-icon {
        width: 40px;
        height: 40px;
      }
    }
  </style>
</Layout> 